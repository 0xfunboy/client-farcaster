# =========================
# Farcaster Client Settings
# =========================

# Required
FARCASTER_ENABLED=true
FARCASTER_API_KEY=
FARCASTER_SIGNER_UUID=
FARCASTER_FID=

# Optional aliases (if your runtime uses these names)
# FARCASTER_NEYNAR_API_KEY=
# FARCASTER_NEYNAR_SIGNER_UUID=

# Core behavior
FARCASTER_DRY_RUN=false
FARCASTER_SINK_MODE=true
FARCASTER_ENABLE_SOURCE_PLUGINS=false
FARCASTER_ENABLE_AUTONOMOUS_POST_GENERATION=false
FARCASTER_PROTOCOL_PRO=false

# API endpoints
FARCASTER_API_BASE_URL=https://api.neynar.com
FARCASTER_HUB_API_BASE_URL=https://snapchain-api.neynar.com
FARCASTER_ENABLE_HUB_FALLBACK=true

# Paid endpoint switches (keep false on free/starter)
FARCASTER_ENABLE_PAID_ENDPOINTS=false
FARCASTER_ENABLE_PAID_CAST_SEARCH=false
FARCASTER_ENABLE_PAID_CAST_CONVERSATION=false

# Posting windows / quotas
FARCASTER_POST_INTERVAL_MIN_MS=1800000
FARCASTER_POST_INTERVAL_MAX_MS=3600000
FARCASTER_MAX_POSTS_PER_DAY=120
FARCASTER_MAX_POSTS_PER_HOUR=20
FARCASTER_QUEUE_MAX_SIZE=300
FARCASTER_NEWS_PRIORITY_WEIGHT=100
FARCASTER_TRADE_PRIORITY_WEIGHT=10

# Cast size + request pacing
FARCASTER_MAX_CAST_LENGTH=300
FARCASTER_CAST_REQUEST_MIN_INTERVAL_MS=10500

# Interactions
FARCASTER_ENABLE_ACTION_PROCESSING=true
FARCASTER_ACTION_INTERVAL=2
FARCASTER_MAX_ACTIONS_PROCESSING=1
FARCASTER_INTERACTIONS_INTERVAL_MIN_MS=60000
FARCASTER_INTERACTIONS_INTERVAL_MAX_MS=120000
FARCASTER_REPLIES_MIN_INTERVAL_MS=10000
FARCASTER_REPLY_FETCH_CASTS_PER_TICK=1
FARCASTER_MAX_INTERACTIONS_PER_HOUR=30
FARCASTER_IGNORE_BOT_AUTHORS=true
FARCASTER_PROCESSED_MESSAGE_TTL_MS=86400000

# Optional targeting
FARCASTER_TARGET_USERS=
FARCASTER_TARGET_FIDS=
FARCASTER_TARGET_TOPICS=

# Optional RSS source (used only if sink mode is false)
FARCASTER_FEED_RSS_URL=https://cointelegraph.com/rss
